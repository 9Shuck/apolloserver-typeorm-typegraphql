{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "build",
    "baseUrl": "./src",
    "lib": ["es2021"],
    "target": "es2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
  }
}